{
  "name": "cyberpet-guardian",
  "version": "1.0.0",
  "description": "CyberPet Guardian - Retro Security Pet",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:css": "tailwindcss -i ./src/index.css -o ./dist/components/index.css",
    "build:pet": "esbuild src/petRenderer.jsx --bundle --outfile=dist/petRenderer.js --platform=browser --format=iife --external:electron",
    "build:popup": "esbuild src/popupRenderer.jsx --bundle --outfile=dist/popupRenderer.js --platform=browser --format=iife --external:electron",
    "build:js": "npm run build:pet && npm run build:popup",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "tailwindcss -i ./src/index.css -o ./dist/components/index.css --watch",
    "watch:pet": "esbuild src/petRenderer.jsx --bundle --outfile=dist/petRenderer.js --platform=browser --format=iife --external:electron --watch",
    "watch:popup": "esbuild src/popupRenderer.jsx --bundle --outfile=dist/popupRenderer.js --platform=browser --format=iife --external:electron --watch",
    "dev": "npm run build && npm run start"
  },
  "keywords": [
    "electron",
    "react",
    "security",
    "cybersecurity",
    "hackathon"
  ],
  "author": "Your Team",
  "license": "MIT",
  "dependencies": {
    "electron": "^38.2.2",
    "howler": "^2.2.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.25.10",
    "tailwindcss": "^3.4.4"
  }
}
